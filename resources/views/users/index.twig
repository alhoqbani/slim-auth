{% extends 'layouts/master.twig' %}

{% block content %}
    <div class="col-sm-6 col-sm-offset-3">
        <h2>Users</h2>
        <ul class="list-group">
            {% for user in users %}
                <li class="list-group-item" id="{{ user.id }}"><a href="{{ path_for('users.show', {id:user.id}) }}">
                        {{ user.name }}
                    </a>
                    <button id="delete_user" onclick="deleteUser({{ user.id }})"
                            class="glyphicon glyphicon-remove-circle pull-left"></button>
                </li>
            {% endfor %}
        </ul>

    </div>

{% endblock %}